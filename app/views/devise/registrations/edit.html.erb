<style type="text/css">
  #main_container{ background-color: #e3e3e3; }
</style>


<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-8 text-center white  ">
    <div class="modal-body text-center">
      EDIT USERS
    </div>
  </div>
  <div class="col-xs-6  col-sm-6 col-md-4 white ">
    <div class="modal-body text-center">
        <a rel="nofollow" data-method="delete" href="/users/sign_out" >cerrar sesion</a>
    </div>
  </div>
</div>
<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="row">
  <div class="col-md-4 col-md-offset-2 text-center white  ">
      <%= devise_error_messages! %>

        <div class="modal-body= text-center">
          <div class="modal-body text-center">
            <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
        <div class="modal-body text-center">
          <%= f.label :name %><br />
            <%= text_field :name, autofocus: true %>
        </div>

        <div class="modal-body text-center">
          <%= f.label :permission_level %><br />
            <%= text_field :permission_level, autofocus: true %>
        </div>

        <div class="modal-body text-center">
          <%= f.label :age  %><br />
            <%= text_field :age, autofocus: true %>
        </div>

        <div class="modal-body text-center">
          <%= f.label :lastname %><br />
            <%= text_field :lastname, autofocus: true %>
        </div>
        <div class="modal-body text-center white  ">
          <%= f.label :address %><br />
            <%= text_field :address, autofocus: true %>
        </div>
        <div class="modal-body text-center white ">
          <%= f.label :job %><br />
            <%= text_field :job, autofocus: true %>
        </div>
  </div>

  <div class="col-md-4 ">
    <div class="modal-body text-center green">
      <%= f.label :civil_status %><br />
      <%= text_field :civil_status, autofocus: true %>
    </div>


    <div class="modal-body text-center green">
          <%= f.collection_select :country_id, Country.all, :id,:name,{:include_blank => false} %>
    </div>

    <div class="modal-body text-center green">
      <%= f.label :password %> <br />
      <%= f.password_field :password, autocomplete: "off" %>
      <br />
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <div class="modal-body text-center green">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="modal-body text-center green">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="modal-bodys text-center green">
          <%= f.submit "Update", class:"btn btn-primary" %>
      </div>
      <hr>
    </div>
  </div>
</div>
<% end %>
